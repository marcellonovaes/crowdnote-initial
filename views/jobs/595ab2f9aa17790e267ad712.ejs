<head>
	<title>CrowdNote</title>
	<link rel="stylesheet"  href='http://<%= host %>/scripts?name=w3&mime=css' >
	<link rel="stylesheet"  href='http://<%= host %>/scripts?name=style&mime=css' >
	<script src='https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
	<script src='http://<%= host %>/scripts?name=jquery&mime=js'></script>
</head>
<body>
<center>
<div class="w3-card-4 w3-margin w3-white" style="padding:1px;">

<p>
<textarea align="center" id="banner" class="instructions" readonly style="width:810;height:100; background-color : #eeeeee;text-align: justify;font-size:18px;padding:20px;">
<%= instruction %>
</textarea>
</p>

<p align=center>
	<div class="player"  style="position: absolute;left:200px">
	  <video id="video" width="600" controls  preload>
		<source src="data:video/<%= mime %>;base64,<%= v64 %>" type="video/<%= mime %>"> 
		<!-- source src="http://<%= host %>/dataset?job=<%= job %>&name=<%= name %>&mime=<%= mime %>" type="video/<%= mime %>" --> 
 	   	Your browser does not support HTML5 video.
	  </video>
	</div>

 	<div id="contributionPanel" class="player" style="align-items:center; text-align:center;display:log;position: absolute;left:900px">
		<p align=center><span id='msg'>O que identificou ?</span></p>
		<p align=center><textarea align="center" class="answer"  id='contrib' name='contrib'></textarea></p>
		<p align=center><button class="Button" id='bt'  onClick="sendContribution()">Send Contribution</button></p>
	</div>

</p>


	<script>
		var video = document.getElementById('video');
		
		video.addEventListener('loadedmetadata', function() {
    			video.currentTime = Math.random() * video.duration -3;
		});


		function sendContribution(){

			var contrib = document.getElementById("contrib");

			if(contrib.value != ''){

				var queryForm = "<form method='post'>";
				queryForm += "<input type='hidden' id='item' name='item' value= '<%= item_id %>'>";
				queryForm += "<input type='hidden' id='fingerprint' name='fingerprint' value='<%= fingerprint %>' >";
				queryForm += " <input type='hidden' id='microtask' name='microtask' value='<%= microtask %>' >";
				queryForm += "<input type='hidden' id='instant' name='instant'  value='"+video.currentTime+"' > ";
				queryForm += "<input type='hidden' id='contrib' name='contrib'  value='"+contrib.value+"' > ";
				queryForm += "</form>";

				$.ajax({
  					type: 'POST',
  					url: $(queryForm).attr("action"),
  					data: $(queryForm).serialize(), 
 					success: function(response) {location.reload();}
				});
			}else{
				document.getElementById("msg").style.color = "#ff0000";
			}
		}

	</script>
</center>
</div>
</body>

